extends ../layout/common.pug

block content

	h1
		span Users
		a.btn.btn-primary.ml-2(href="/user/create") New user

	form(action="/user/search", method = "GET", class="d-flex")
		input(type='text', name="q", placeholder="Find user", class="form-control")
		button.btn.btn-primary.ml-2 Search

	table.table
		tr 
			th Name
			th Phone
			th Action 
		each user in users
			tr
				td= user.name
				td= user.phone
				td
					a.btn.btn-light(href='/user/' + user.id) View
